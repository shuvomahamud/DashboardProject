@model Domain.Entities.Onboarding
@{
    ViewBag.Title = $"OB-{Model.OnboardingId}";
    var dict = Model.Fields.ToDictionary(f => f.FieldName!, f => f);
    string row(string label)
    {
        dict.TryGetValue(label, out var f);
        var date = f?.Date?.ToString("MM/dd/yyyy") ?? "";
        return $@"
<tr>
  <td class='fw-bold'>{label}</td>
  <td>{f?.Owner ?? ""}</td>
  <td>{f?.Value ?? date}</td>
  <td>{f?.Notes ?? ""}</td>
</tr>";
    }
}

<h3>On-Boarding #@Model.OnboardingId</h3>

<table class="table table-borderless w-75">
    <thead class="table-light">
        <tr><th>Item</th><th width="15%">Owner</th><th width="35%">Details</th><th width="35%">Notes</th></tr>
    </thead>
    <tbody>
        <!-- master (top) -->
        <tr class="table-primary fw-semibold">
            <td>Candidate Name</td>
            <td></td>
            <td>@Model.CandidateName</td>
            <td></td>
        </tr>
        <tr class="table-primary fw-semibold">
            <td>Created</td>
            <td></td>
            <td>@Model.CreatedDateUtc.ToString()</td>
            <td></td>
        </tr>

        <!-- dynamic 50 rows -->
        @Html.Raw(row("Task Order #"))
        @Html.Raw(row("Client/Agency Name (from Onboarding letter)"))
        @Html.Raw(row("Form-2/Form-B"))
        @Html.Raw(row("Insert the agency Name from Form-1/Form"))
        @Html.Raw(row("Job Title"))
        @Html.Raw(row("Work Location"))
        @Html.Raw(row("Project/Program Name"))
        @Html.Raw(row("Name of Recruiter"))
        @Html.Raw(row("Date of confirmation"))
        @Html.Raw(row("Actual Start Date (per client work order)"))
        @Html.Raw(row("End Date (Per client work order)"))
        @Html.Raw(row("Expected onboarding Date"))
        @Html.Raw(row("DOB"))
        @Html.Raw(row("Name of the consultant"))
        @Html.Raw(row("Current Location"))
        @Html.Raw(row("Phone Number of the consultant"))
        @Html.Raw(row("Email address of the consultant"))
        @Html.Raw(row("Hiring Term (W-2, 1099, C2C)"))
        @Html.Raw(row("Mailing address of the consultant"))
        @Html.Raw(row("Onboarding Letter from the client (received)"))
        @Html.Raw(row("Bill Rate (rate from the client)"))
        @Html.Raw(row("Finger Printing to be done (Yes/NO)"))
        @Html.Raw(row("Background Check (Yes or No)"))
        @Html.Raw(row("Onboarding email to the candidate"))
        @Html.Raw(row("Remote log in credentials to the consultant"))
        @Html.Raw(row("Non-Compete Agreement/BNB Consultant Doc-1"))
        @Html.Raw(row("Original SSN and VISA document Needed"))
        @Html.Raw(row("I-9"))
        @Html.Raw(row("Core Form/NDA Form"))
        @Html.Raw(row("Telecommuting"))
        @Html.Raw(row("To Track the Submission (CJIS)"))
        @Html.Raw(row("Name of the vendor, if any"))
        @Html.Raw(row("Phone number of the POC at vendor"))
        @Html.Raw(row("Email address of the POC at vendor"))
        @Html.Raw(row("Pay Rate (Rate to the Vendor/Consultant)"))
        @Html.Raw(row("FED ID of the vendor"))
        @Html.Raw(row("Address of the vendor"))
        @Html.Raw(row("MSA/Employment Letter"))
        @Html.Raw(row("Work Order"))
        @Html.Raw(row("COI"))
        @Html.Raw(row("Billing Terms (Net 30 or Net 45)"))
        @Html.Raw(row("Onboarding email to the vendor"))
        @Html.Raw(row("Upload Payroll information on CEIPAL"))
        @Html.Raw(row("W9/I-9"))
        @Html.Raw(row("Timesheets (Weekly, LATS, Monthly, or Fortnightly)"))
        @Html.Raw(row("Tracking/Arrival/Joining details of the consultant"))
        @Html.Raw(row("* All verifications to be done by the support team"))
        @Html.Raw(row("All files uploaded in DB"))
        @Html.Raw(row("Engagement Length in Months"))
        @Html.Raw(row("Visa/Passport #"))
        @Html.Raw(row("Type of Visa"))
    </tbody>
</table>

<a class="btn btn-secondary" href="/onboarding">Back</a>
