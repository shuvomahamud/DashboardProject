@{
    ViewBag.Title = "To-Do List";
    Layout = "_Layout";
}

<h2 class="mt-3">To-Do list</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-lg"></i> Create Task
</a>

<table id="todoTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Task&nbsp;#</th>
            <th>Category</th>
            <th>Task&nbsp;Name</th>
            <th>Trigger&nbsp;Date</th>
            <th>Status</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script>
        $(function () {

            /* --- build absolute API URL ----------------------------------- */
            const apiBase = "/";       // Local API calls
            const todoUrl = `${apiBase}api/todo`;

            /* --- DataTable ------------------------------------------------ */
            $('#todoTable').DataTable({
                ajax: { url: todoUrl, dataSrc: '' },
                columns: [
                    {
                        data: 'taskId',
                        render: (id) => `<a href="/todo/detail/${id}">${id}</a>`
                    },
                    { data: 'category' },
                    { data: 'taskName' },
                    {
                        data: 'triggerDate',
                        render: d => d ? new Date(d).toLocaleDateString() : ''
                    },
                    { data: 'status' }
                ],
                order: [[3, 'asc']],
                paging: true
            });
        });
    </script>
}
