@model Domain.Entities.AccountsPayable

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="StartEndDate" class="form-label"></label>
            <input asp-for="StartEndDate" type="datetime-local" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="AgencyAuthorizedUser" class="form-label"></label>
            <input asp-for="AgencyAuthorizedUser" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="TaskOrderNumber" class="form-label"></label>
            <input asp-for="TaskOrderNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CandidateName" class="form-label"></label>
            <input asp-for="CandidateName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Region" class="form-label"></label>
            <input asp-for="Region" class="form-control" type="number" />
        </div>
        <div class="mb-3">
            <label asp-for="JobTitle" class="form-label"></label>
            <input asp-for="JobTitle" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="SkillLevel" class="form-label"></label>
            <input asp-for="SkillLevel" class="form-control" type="number" />
        </div>
        <div class="mb-3">
            <label asp-for="TotalHours" class="form-label"></label>
            <input asp-for="TotalHours" class="form-control" type="number" step="0.01" />
        </div>
        <div class="mb-3">
            <label asp-for="TimesheetApprovalDate" class="form-label"></label>
            <input asp-for="TimesheetApprovalDate" type="datetime-local" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="HourlyWageRateBase" class="form-label"></label>
            <input asp-for="HourlyWageRateBase" class="form-control" type="number" step="0.01" />
        </div>
        <div class="mb-3">
            <label asp-for="MarkUpPercent" class="form-label"></label>
            <input asp-for="MarkUpPercent" class="form-control" type="number" step="0.01" />
        </div>
        <div class="mb-3">
            <label asp-for="HourlyWageRateWithMarkup" class="form-label"></label>
            <input asp-for="HourlyWageRateWithMarkup" class="form-control" type="number" step="0.01" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="TotalBilledOgsClient" class="form-label"></label>
            <input asp-for="TotalBilledOgsClient" class="form-control" type="number" step="0.01" />
        </div>
        <div class="mb-3">
            <label asp-for="PaidToVendor" class="form-label"></label>
            <input asp-for="PaidToVendor" class="form-control" type="number" step="0.01" />
        </div>
        <div class="mb-3">
            <label asp-for="VendorName" class="form-label"></label>
            <input asp-for="VendorName" class="form-control" />
        </div>
        <!-- Bool: Checkbox pattern for nullable bools -->
        <div class="form-check mb-3">
            <input type="hidden" name="HoursMatchInvoice" value="false" />
            <input class="form-check-input" type="checkbox" name="HoursMatchInvoice" value="true"
            @(Model.HoursMatchInvoice == true ? "checked" : "") />
            <label class="form-check-label" for="HoursMatchInvoice">Hours Match Invoice</label>
        </div>
        <div class="mb-3">
            <label asp-for="InvoiceNumber" class="form-label"></label>
            <input asp-for="InvoiceNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="VendorInvoiceDate" class="form-label"></label>
            <input asp-for="VendorInvoiceDate" type="datetime-local" class="form-control" />
        </div>
        <div class="form-check mb-3">
            <input type="hidden" name="TimesheetsApproved" value="false" />
            <input class="form-check-input" type="checkbox" name="TimesheetsApproved" value="true"
            @(Model.TimesheetsApproved == true ? "checked" : "") />
            <label class="form-check-label" for="TimesheetsApproved">Timesheets Approved</label>
        </div>
        <div class="mb-3">
            <label asp-for="Remark" class="form-label"></label>
            <input asp-for="Remark" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PaymentTermNet" class="form-label"></label>
            <input asp-for="PaymentTermNet" class="form-control" type="number" />
        </div>
        <div class="mb-3">
            <label asp-for="PaymentMode" class="form-label"></label>
            <input asp-for="PaymentMode" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PaymentDueDate" class="form-label"></label>
            <input asp-for="PaymentDueDate" type="datetime-local" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Check" class="form-label"></label>
            <input asp-for="Check" class="form-control" />
        </div>
    </div>
</div>
